<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 android:gravity="center"
    android:background="@color/gray"
    tools:context=".home.activity.Home">

<TextView
    android:layout_marginBottom="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:textStyle="bold|italic"
    android:text="HOME"
    android:textColor="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_buku"
            android:layout_marginBottom="60dp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="11dp"
            app:cardBackgroundColor="@color/pink">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/buku"/>
                <TextView
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:textStyle="bold"

                    android:text="BUKU"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_pulpen"
            android:layout_marginBottom="60dp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/pink">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/polpen"/>
                <TextView
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:textStyle="bold"

                    android:text="PULPEN"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_penghapus"
            android:layout_marginBottom="60dp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/pink">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/penghapus"/>
                <TextView
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:textStyle="bold"

                    android:text="PENGHAPUS"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/H_home"
            android:layout_marginRight="20dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_home_24"/>
        <ImageView
            android:id="@+id/H_shoppp"
            android:layout_marginRight="20dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"/>
        <ImageView
            android:id="@+id/H_record"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_text_snippet_24"/>
        <ImageView
            android:id="@+id/H_info"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_help_24"/>
    </LinearLayout>
</LinearLayout>